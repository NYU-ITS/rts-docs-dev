    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/.pixi/envs/default/bin/npm",
            "args": [
                "run",
                "start"
            ],
            "env": {
                "PATH": "$PATH:${workspaceFolder}/.pixi/envs/default/bin",
            }
        }
    ]
}